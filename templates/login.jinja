{%extends 'base.jinja'%}

{%block title%}Login{%endblock%}

{%block content%}

<div class="w-full max-w-xs mx-auto mt-40">
    <form class="bg-gray-900 shadow-lg shadow-green-500 rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label class="block text-gray-100 text-sm font-bold mb-2" for="username">
                Username
            </label>
            <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-100 leading-tight focus:outline-none focus:shadow-outline"
                id="username" type="text" name="username" placeholder="Username">
        </div>
        <div class="mb-6">
            <label class="block text-gray-100 text-sm font-bold mb-2" for="password">
                Password
            </label>
            <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-100 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                id="password" name="passwd" type="password" placeholder="******************">
        </div>
        <div class="flex items-center justify-between text-center">
            <button type="submit" class="btn btn-success mx-auto btn-wide"><strong>Iniciar Sesi√≥n</strong></button>
        </div>
    </form> 
</div>
{%endblock%}