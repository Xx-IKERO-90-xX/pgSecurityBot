{%extends 'base.jinja'%}

{%block title%} Inicio {%endblock%}

{%block content%}
<br><br>
<div tabindex="0" class="collapse collapse-arrow bg-gray-800 text-white shadow shadow-green-500">
    <div class="collapse-title font-semibold flex text-yellow-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span class="ml-2">Alertas</span>
    </div>
    <div class="collapse-content text-sm">
        {%for alert in alerts%}
        {%if alert['type'] == 'Warning'%}
        <div role="alert" class="alert alert-warning alert-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span><strong>{{alert['message']}}</strong></span>
        </div>
        {%endif%}
        {%endfor%}
    </div>
</div>
<br><br>
<div tabindex="0" class="collapse collapse-arrow bg-gray-800 text-white shadow shadow-green-500">
    <div class="collapse-title font-semibold flex text-red-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="ml-2">Errores</span>
    </div>
    <div class="collapse-content text-sm">
        {%for alert in alerts%}
        {%if alert['type'] == 'Error'%}
        <div role="alert" class="alert alert-error alert-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><strong>{{alert['message']}}</strong></span>
        </div>
        {%endif%}
        {%endfor%}
    </div>
</div>
<br><br>


{%endblock%}